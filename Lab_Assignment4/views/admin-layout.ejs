    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background: #f8f9fa;
        }
        
        .navbar {
            background: white !important;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 1rem;
        }
        
        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
            color: #4158D0 !important;
        }
        
        .nav-link {
            position: relative;
            color: #555 !important;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            transition: all 0.3s ease;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: #4158D0;
            transition: width 0.3s ease;
        }
        
        .nav-link:hover::after {
            width: 100%;
        }
        
        .dashboard-card {
            border: none;
            padding: 1rem;
            overflow: hidden;
            animation: slideIn 0.5s ease-out;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .dashboard-card:hover {
            transform: translateY(-5px) scale(1.02);
        }
        
        .card-body {
            position: relative;
            z-index: 1;
        }
        
        .stat-icon {
            font-size: 3rem;
            opacity: 0.8;
            transition: all 0.3s ease;
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .dashboard-card:hover .stat-icon {
            transform: scale(1.1);
            opacity: 1;
        }
        
        .card-title {
            font-size: 1rem;
            font-weight: 500;
            opacity: 0.9;
        }
        
        h2 {
            font-weight: 700;
            margin-top: 0.5rem;
        }
        
        .bg-primary {
            background: linear-gradient(45deg, #4158D0, #C850C0) !important;
        }
        
        .bg-success {
            background: linear-gradient(45deg, #00B09B, #96C93D) !important;
        }
        
        .bg-warning {
            background: linear-gradient(45deg, #F9D423, #FF4E50) !important;
        }
        
        .bg-info {
            background: linear-gradient(45deg, #2193b0, #6dd5ed) !important;
        }
        
        .container-fluid {
            padding: 2rem;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .dashboard-card {
                margin-bottom: 1rem;
            }
            
            .stat-icon {
                font-size: 2.5rem;
            }
        }
        
        /* Loading animation */
        .loading {
            position: relative;
            overflow: hidden;
        }
        
        .loading::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 200%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent 0%,
                rgba(255,255,255,0.2) 50%,
                transparent 100%);
            animation: loading 1.5s infinite;
        }
        
        @keyframes loading {
            from { transform: translateX(-100%); }
            to { transform: translateX(100%); }
        }
        
        /* Hover effects */
        .card:hover::before {
            opacity: 1;
            transform: scale(1.5);
        }
        </style>
</head>
