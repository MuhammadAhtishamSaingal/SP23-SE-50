<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f7f8fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #007bff;
        }

        .lead {
            font-size: 1.2rem;
            color: #555;
        }

        .bi-check-circle {
            font-size: 4rem;
            color: #28a745;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
        }

        .col-md-8,
        .col-md-4 {
            padding: 10px;
        }

        .col-md-8 {
            flex: 2;
        }

        .col-md-4 {
            flex: 1;
        }

        .d-flex {
            display: flex;
            align-items: center;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .d-flex img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }

        .d-flex span {
            margin-left: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: #fff;
            padding: 12px 20px;
            font-size: 1rem;
            border-radius: 8px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        hr {
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        /* Shipping and Payment Information Styling */
        .mb-1 {
            margin-bottom: 0.5rem;
            font-size: 1rem;
            color: #555;
        }

        .mt-3 {
            margin-top: 1rem;
        }

        .mt-4 {
            margin-top: 2rem;
        }

        .order-summary {
            font-size: 1rem;
            color: #333;
        }

        .order-summary strong {
            font-weight: 600;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Order Confirmed!</h2>
                <p class="lead">Thank you for your purchase</p>
                <p>Order Number: <strong><%= orderNumber %></strong></p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title">Order Details</h4>
                        <% cartItems.forEach(item => { %>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <img src="/<%= item.product.picture %>" alt="<%= item.product.title %>"
                                    style="width: 50px; height: 50px; object-fit: cover;">
                                <span class="ms-3"><%= item.product.title %> Ã— <%= item.quantity %></span>
                            </div>
                            <span>$<%= (item.product.price * item.quantity).toFixed(2) %></span>
                        </div>
                        <% }); %>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total Amount:</strong>
                            <strong>$<%= totalAmount.toFixed(2) %></strong>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Shipping Information</h4>
                        <p class="mb-1"><%= shippingInfo.fullName %></p>
                        <p class="mb-1"><%= shippingInfo.address %></p>
                        <p class="mb-1"><%= shippingInfo.city %>, <%= shippingInfo.state %> <%= shippingInfo.zipCode %></p>
                        <p class="mb-1">Phone: <%= shippingInfo.phone %></p>
                        <p class="mb-0">Email: <%= shippingInfo.email %></p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Payment Information</h4>
                        <p class="mb-1">Payment Method: <%= paymentInfo.paymentMethod === 'cod' ? 'Cash on Delivery' : 'Card Payment' %></p>
                        <% if (paymentInfo.paymentMethod !== 'cod') { %>
                        <p class="mb-1">Card Number: **** **** **** <%= paymentInfo.cardNumber.slice(-4) %></p>
                        <% } %>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <a href="/" class="btn btn-primary">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
